<p id="notice"><%= notice %></p>

<h1>Lista de Cita</h1>

<table style="width: 100%; text-align:center;">
  <thead>
    <tr>
      <th>Medico</th>
      <th>Paciente</th>
      <th>Consultorio</th>
      <th>Codigo</th>
      <th>Ubicacion</th>
      <th>Fecha Inicio</th>
      <th>Duracion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cita.each do |citum| %>
      <tr>
        <td><%= citum.medico.nombres %>  <%= citum.medico.apellidos %></td>
        <td><%= citum.paciente.nombres %>  <%= citum.paciente.apellidos %></td>
        <td><%= citum.consultorio.nombre %></td>
        <td><%= citum.consultorio.codigo %></td>
        <td><%= citum.consultorio.ubicacion %></td>
        <td><%= citum.fecha %> <%= citum.hora_inicio.strftime("%H:%M:%S") %></td>
        <td><%= citum.hora_fin.strftime("%H:%M:%S") %></td>
        <td><%= link_to 'Show', citum %></td>
        <td><%= link_to 'Edit', edit_citum_path(citum) %></td>
        <td><%= link_to 'Destroy', citum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Citas', new_citum_path %>
